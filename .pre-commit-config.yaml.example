# Example Pre-commit Configuration for mypy-pure

# Add this to your .pre-commit-config.yaml file

repos:
  - repo: https://github.com/pre-commit/mirrors-mypy
    rev: v1.7.0  # Use the latest version
    hooks:
      - id: mypy
        additional_dependencies: [mypy-pure]
        args: [--config-file=mypy.ini]
